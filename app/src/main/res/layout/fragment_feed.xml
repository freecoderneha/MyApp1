<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <ImageView
          android:id="@+id/image_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_overlay">
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:translationZ="12dp"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorNormal="@color/primary_color"
            fab:fab_addButtonColorPressed="@color/primary_dark_color"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/primary_color"
                fab:fab_colorPressed="@color/primary_dark_color"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_action_add_a_photo"
                fab:fab_size="mini"
                fab:fab_title="Photo/Video" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/primary_color"
                fab:fab_colorPressed="@color/primary_dark_color"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_action_add"
                fab:fab_size="mini"
                fab:fab_title="Post Add" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>
</FrameLayout>